[Unit]
Description=NDN Avahi Monitor
Wants=nfd.service
After=nfd.service

[Service]
ExecStart=/usr/bin/edd-avahi-monitor
Restart=on-abort
CapabilityBoundingSet=
PrivateDevices=yes
ProtectSystem=full
ProtectHome=yes
PrivateTmp=yes
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
